@model Thuthuka_Construction.Models.QuotationResource

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 text-white">
        <h2 class="text-center mb-0">Create Quotation Resource</h2>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating py-2 col-12">
                <select asp-for="QuotationId" class="form-select border-0 shadow" asp-items="ViewBag.QuotationId">
                    <option disabled selected>--Select Quotation--</option>
                </select>
                <label asp-for="QuotationId" class="ms-2">Quotation</label>
                <span asp-validation-for="QuotationId" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <select asp-for="ResourceId" class="form-select border-0 shadow" asp-items="ViewBag.ResourceId">
                    <option disabled selected>--Select Resource--</option>
                </select>
                <label asp-for="ResourceId" class="ms-2">Resource</label>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="Quantity" class="form-control border-0 shadow" />
                <label asp-for="Quantity" class="ms-2">Quantity</label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}