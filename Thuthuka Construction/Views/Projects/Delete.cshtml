@model Thuthuka_Construction.Models.Project

<div class="card shadow border-0 my-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Project</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <h4 class="border-bottom pb-3 mb-4 text-danger">Are you sure you want to delete this project?</h4>

        <dl class="row">
            <dt class="col-sm-3">Project Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProjectName)</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDate)</dd>

            <dt class="col-sm-3">Project Type</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProjectType.ProjectTypeId)</dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.Id)</dd>

            <dt class="col-sm-3">Foreman</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Foreman.Id)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProjectId" />

            <div class="row pt-3">
                <div class="col-6 col-md-3">
                    <input type="submit" value="Delete" class="btn btn-danger form-control" />
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
