@model Thuthuka_Construction.Models.Quotation

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-secondary bg-gradient ml-0 py-3 text-white">
        <h2 class="text-center mb-0">Create Quotation</h2>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Customer Project Selection -->
            <div class="form-floating py-2 col-12">
                <select asp-for="CustomerProjectId" class="form-select border-0 shadow" asp-items="ViewBag.CustomerProjectId">
                    <option disabled selected>--Select Customer Project--</option>
                </select>
                <label asp-for="CustomerProjectId" class="ms-2">Customer Project</label>
                <span asp-validation-for="CustomerProjectId" class="text-danger"></span>
            </div>

            <!-- Resource Selection and Quantity Input -->
            <h4 class="py-3">Select Resources</h4>
            @foreach (var resource in ViewBag.Resources)
            {
                <div class="row py-2">
                    <div class="col-6">
                        <input type="checkbox" name="resourceIds" value="@resource.ResourceId" />
                        <label>@resource.Name (@resource.PricePerUnit.ToString("C") per unit)</label>
                    </div>
                    <div class="col-6">
                        <input type="number" name="quantities" class="form-control border-0 shadow" min="1" placeholder="Quantity" />
                    </div>
                </div>
            }

            <!-- Status (Hidden field since it is always "Pending" initially) -->
            <input type="hidden" asp-for="Status" value="Pending" />

            <!-- Submit and Back Buttons -->
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
