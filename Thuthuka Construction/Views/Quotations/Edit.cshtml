@model Thuthuka_Construction.Models.Quotation

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Quotation</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuotationId" />
            <input type="hidden" asp-for="CustomerProjectId" />

            <div class="row">
                <div class="col-md-12">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <select asp-for="CustomerProjectId" class="form-select border-0 shadow" asp-items="ViewBag.CustomerProjectId">
                                <option disabled selected>--Select Customer Project--</option>
                            </select>
                            <label asp-for="CustomerProjectId" class="ms-2">Customer Project</label>
                            <span asp-validation-for="CustomerProjectId" class="text-danger"></span>
                        </div>


                        <h4 class="py-3">Resources</h4>
                        @foreach (var resource in Model.QuotationResources)
                        {
                            <div class="row py-2">
                                <div class="col-6">
                                    <input type="checkbox" name="resourceIds" value="@resource.ResourceId" checked />
                                    <label>@resource.Resource.Name (@resource.Resource.PricePerUnit.ToString("C") per unit)</label>
                                </div>
                                <div class="col-6">
                                    <input type="number" name="quantities" class="form-control border-0 shadow" min="1" value="@resource.Quantity" />
                                </div>
                            </div>
                        }

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Save</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
