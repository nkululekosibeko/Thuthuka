@model Thuthuka_Construction.Models.CustomerProject

@{
    ViewData["Title"] = "Edit Customer Project";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-warning bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Customer Project</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="CustomerProjectId" />

                    <div class="form-group">
                        <label asp-for="CustomerId" class="control-label"></label>
                        <select asp-for="CustomerId" class="form-control">
                            <option value="">-- Select Customer --</option>
                            @foreach (var item in ViewBag.CustomerId)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="QuatationId" class="control-label"></label>
                        <select asp-for="QuatationId" class="form-control">
                            <option value="">-- Select Quotation --</option>
                            @foreach (var item in ViewBag.QuatationId)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="QuatationId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SelectDate" class="control-label"></label>
                        <input asp-for="SelectDate" class="form-control" />
                        <span asp-validation-for="SelectDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
