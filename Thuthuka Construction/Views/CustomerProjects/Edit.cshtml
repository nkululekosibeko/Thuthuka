@model Thuthuka_Construction.Models.CustomerProject

<div class="card shadow border-0 my-4">
    <div class="card-header bg-warning bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Customer Project</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Hidden input for CustomerProjectId -->
                    <input type="hidden" asp-for="CustomerProjectId" />

                    <!-- Customer Dropdown -->
                    <div class="form-group">
                        <label asp-for="CustomerId" class="control-label">Customer</label>
                        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                            <option value="">-- Select Customer --</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <!-- Project Dropdown -->
                    <div class="form-floating py-2 col-12">
                        <select asp-for="ProjectId" class="form-select border-0 shadow" asp-items="ViewBag.ProjectId">
                            <option disabled selected>--Select Project--</option>
                        </select>
                        <label asp-for="ProjectId" class="ms-2">Project</label>
                        <span asp-validation-for="ProjectId" class="text-danger"></span>
                    </div>

                    <!-- Select Date Input -->
                    <div class="form-group">
                        <label asp-for="SelectDate" class="control-label">Select Date</label>
                        <input asp-for="SelectDate" class="form-control" />
                        <span asp-validation-for="SelectDate" class="text-danger"></span>
                    </div>

                    <!-- Status Input -->
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Status</label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="form-group mt-4">
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
