@model IEnumerable<Thuthuka_Construction.Models.CustomerProject>

@if (User.IsInRole(SD.Role_Admin))
{
    <div class="card shadow border-0 my-4">
        <div class="card-header bg-primary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Customer Projects</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                    <!-- Add filters or search here if needed -->
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Customer Project
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Project</th>
                        <th>Select Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Customer.UserName</td> <!-- Display customer username -->
                            <td>@item.Project.ProjectName</td> <!-- Display project name -->
                            <td>@item.SelectDate.ToString("yyyy-MM-dd")</td> <!-- Format date -->
                            <td>@item.Status</td> <!-- Display project status -->
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CustomerProjectId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.CustomerProjectId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <h2 class="text-center mb-4">Customer Projects</h2>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Project: @item.Project.ProjectName</h5>
                            <p class="card-text">Customer: @item.Customer.FirstName @item.Customer.LastName</p>
                            <p class="card-text">City: @item.Customer.City</p>
                            <p class="card-text">Phone: @item.Customer.PhoneNumber</p>
                            <p class="card-text">Status: <span class="badge bg-info">@item.Status</span></p>
                            <p class="card-text">Date Selected: @item.SelectDate.ToString("yyyy-MM-dd")</p>
                            <a href="@Url.Action("CustomerProjectQuotation", new { customerProjectId = item.CustomerProjectId })" class="btn btn-secondary btn-sm">
                                View Quotation
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
