@model IEnumerable<Thuthuka_Construction.Models.CustomerProject>

<div class="container my-5">
    <h2 class="text-center mb-4">My Project Dashboard</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Project: @Html.DisplayFor(modelItem => item.Project.ProjectName)</h5>
                        <p class="card-text">Status: <span class="badge bg-warning">@Html.DisplayFor(modelItem => item.Status)</span></p>
                        <p class="card-text">Selected On: @Html.DisplayFor(modelItem => item.SelectDate)</p>
                        <a href="@Url.Action("CustomerProjectProgress", new { customerProjectId = item.CustomerProjectId })" class="btn btn-primary btn-sm">
                            View Progress
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
