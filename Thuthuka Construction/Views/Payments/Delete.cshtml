@model Thuthuka_Construction.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Payment</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <h4 class="border-bottom pb-3 mb-4 text-danger">Are you sure you want to delete this payment?</h4>

        <dl class="row">
            <dt class="col-sm-3">Payment Type</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentType)</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Amount)</dd>

            <dt class="col-sm-3">Payment Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentDate)</dd>

            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.Id)</dd>

            <dt class="col-sm-3">Customer Project</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerProject.CustomerProjectId)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PaymentId" />

            <div class="row pt-3">
                <div class="col-6 col-md-3">
                    <input type="submit" value="Delete" class="btn btn-danger form-control" />
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
