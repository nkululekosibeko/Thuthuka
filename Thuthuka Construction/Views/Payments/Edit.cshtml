@model Thuthuka_Construction.Models.Payment

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Payment</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentId" />

            <div class="row">
                <div class="col-md-12">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <input asp-for="PaymentType" class="form-control border-0 shadow" placeholder="Payment Type" />
                            <label asp-for="PaymentType" class="ms-2">Payment Type</label>
                            <span asp-validation-for="PaymentType" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Amount" class="form-control border-0 shadow" placeholder="Amount" />
                            <label asp-for="Amount" class="ms-2">Amount</label>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="PaymentDate" class="form-control border-0 shadow" placeholder="Payment Date" />
                            <label asp-for="PaymentDate" class="ms-2">Payment Date</label>
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="CustomerId" class="form-select border-0 shadow" asp-items="ViewBag.CustomerId">
                                <option disabled selected>--Select Customer--</option>
                            </select>
                            <label asp-for="CustomerId" class="ms-2">Customer</label>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="CustomerProjectId" class="form-select border-0 shadow" asp-items="ViewBag.CustomerProjectId">
                                <option disabled selected>--Select Customer Project--</option>
                            </select>
                            <label asp-for="CustomerProjectId" class="ms-2">Customer Project</label>
                            <span asp-validation-for="CustomerProjectId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Status" class="form-control border-0 shadow" placeholder="Status" />
                            <label asp-for="Status" class="ms-2">Status</label>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Save</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
