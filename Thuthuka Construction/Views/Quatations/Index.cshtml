@model IEnumerable<Thuthuka_Construction.Models.Quatation>

@{
    ViewData["Title"] = "Quotation List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Quotation List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <!-- Left side could be used for filters, search, or other controls -->
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Quotation
                </a>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow border-0">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Quotation ID: @item.QuatationId</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Customer Project</h6>
                            <p class="card-text">Customer Project ID: @item.customerProject.CustomerProjectId</p>

                            <h6 class="card-title">Foreman</h6>
                            <p class="card-text">Foreman ID: @item.Foreman.Id</p>

                            <h6 class="card-title">Total Cost</h6>
                            <p class="card-text">@item.TotalCost</p>

                            <h6 class="card-title">Resources</h6>
                            <p class="card-text">@item.Resources</p>

                            <h6 class="card-title">Date Created</h6>
                            <p class="card-text">@item.DateCreated.ToShortDateString()</p>

                            <h6 class="card-title">Status</h6>
                            <p class="card-text">@item.Status</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="Edit" asp-route-id="@item.QuatationId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.QuatationId" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.QuatationId" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
